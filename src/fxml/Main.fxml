    <!-- Options form -->
    <GridPane
            alignment="CENTER" hgap="10.0" vgap="10.0"
            layoutX="10.0" layoutY="10.0"
            prefHeight="100.0" prefWidth="100.0"
            AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="100">

        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" minHeight="10.0" prefHeight="10.0"/>
            <RowConstraints vgrow="SOMETIMES" minHeight="10.0" prefHeight="10.0"/>
        </rowConstraints>

        <!-- Overflow headers -->
        <Label
                text="Select your configuration" textFill="black"
                alignment="TOP_CENTER"
                GridPane.rowIndex="0" GridPane.columnIndex="0"
                GridPane.rowSpan="2" GridPane.columnSpan="2"
        >
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <Label
                text="Control panel" textFill="black"
                alignment="TOP_CENTER"
                GridPane.rowIndex="0" GridPane.columnIndex="2"
                GridPane.rowSpan="2" GridPane.columnSpan="2"
        >
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <!-- Overflow label column -->
        <Label
                fx:id="lblMethod"
                text="Array method"
                GridPane.rowIndex="3" GridPane.columnIndex="0"/>

        <Label
                fx:id="lblSize"
                text="Array size"
                GridPane.rowIndex="4" GridPane.columnIndex="0"/>

        <Label
                fx:id="lblElements"
                text="Array elements"
                GridPane.rowIndex="5" GridPane.columnIndex="0"/>

        <!-- Overflow optional column -->
        <ChoiceBox
                fx:id="cbMethod"
                GridPane.rowIndex="3" GridPane.columnIndex="1">

            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Tree sort"/>
                    <String fx:value="Not implemented"/>
                </FXCollections>
            </items>

        </ChoiceBox>

        <TextField
                fx:id="tfSize"
                GridPane.rowIndex="4" GridPane.columnIndex="1">
        </TextField>

        <TextField
                fx:id="tfElements"
                GridPane.rowIndex="5" GridPane.columnIndex="1">
        </TextField>

        <!-- Overflow control buttons -->
        <Button
                fx:id="btnGenerate"
                text="Generate"
                GridPane.rowIndex="3" GridPane.columnIndex="2">
        </Button>

        <Button
                fx:id="btnStart"
                text="Start"
                GridPane.rowIndex="4" GridPane.columnIndex="2">
        </Button>

        <Button
                fx:id="btnStop"
                text="Stop"
                GridPane.rowIndex="5" GridPane.columnIndex="2">
        </Button>

        <Button
                fx:id="btnReset"
                text="Reset"
                GridPane.rowIndex="6" GridPane.columnIndex="2">
        </Button>

        <Button
                fx:id="btnSave"
                text="Save"
                GridPane.rowIndex="7" GridPane.columnIndex="2">
        </Button>

    </GridPane>

</AnchorPane>